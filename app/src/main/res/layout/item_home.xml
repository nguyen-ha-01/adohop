<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="368dp"
    android:layout_height="256dp"
    android:maxWidth="356dp"
    android:maxHeight="256dp"
    android:layout_gravity="center_horizontal"

    >

    <ImageView
        android:id="@+id/item_home_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img" />

    <TextView
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_home_title"
      android:layout_gravity="left|bottom"
        android:text="Áo quốc phòng"
        android:height="38dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#8C000000"
        android:paddingStart="12dp"
        android:textFontWeight="700"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_home_thumb"
        android:layout_gravity="left|bottom"
        android:text="Thuê ngay"
        android:height="38dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#8C000000"
        android:paddingStart="12dp"
        android:textFontWeight="700"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/item_home_price"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="6dp"

        android:layout_marginTop="153dp"
        android:text="chỉ từ 1000Đ"
        android:height="38dp"
        android:gravity="center|right"
        android:textColor="#FFFFFF"
        android:background="#8C000000"
        android:paddingEnd="12dp"
        android:textFontWeight="700"
        android:textSize="20sp" />


</FrameLayout>