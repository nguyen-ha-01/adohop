<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.nap_tien.NapTienFragment">
    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <TextView
        android:id="@+id/nh_p_s_ti_n"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="96dp"
        android:text="Nhập số tiền muốn nạp"
        android:textSize="24sp"


        android:textStyle="bold"
        android:textColor="#28386D"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/fragment_nap_tien_money"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/nh_p_s_ti_n"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:lineHeight="60sp"
        android:textSize="28sp"
        android:background="@drawable/outline_backround"
        android:inputType="number" />

    <Button
        android:id="@+id/fragment_nap_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:height="56dp"
        android:backgroundTint="#28386D"
        android:layout_marginHorizontal="20dp"
        android:text="thanh toán"
        android:textColor="@color/on_primary"
        android:textSize="28sp"
        app:cornerRadius="14dp"
        app:rippleColor="@color/primary_indicator" />


</RelativeLayout>