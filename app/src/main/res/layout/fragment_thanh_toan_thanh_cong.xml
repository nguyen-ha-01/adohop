<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_success"
    tools:context=".fragments.thanh_toan_thanh_cong.ThanhToanThanhCongFragment">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:src="@drawable/icon_success"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:text="@string/thanh_to_n_"
        android:lineHeight="36sp"
        android:textSize="36sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/on_primary"
        android:gravity="center_horizontal|top"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="334dp"
            android:layout_height="226dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="326dp"
            android:background="@drawable/back_ticket"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingTop="6dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="left|top"
                        android:height="22dp"
                        android:gravity="center_vertical"
                        android:text="Mã nhận đồ"
                        android:textColor="#B3000000"
                        android:textFontWeight="300"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView

                    android:id="@+id/item_ticket_ma_nhan_do"
                    android:layout_width="200dp"
                    android:maxWidth="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:height="51dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:text="MTCe705fa9a-733d-418a-93fc-d5cf4d97448f"
                    android:textColor="#000000"
                    android:textFontWeight="300"
                    android:textSize="32sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/item_ticket_barcode"
                    android:layout_width="218dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/barcode" />


            </LinearLayout>


        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_tttc_btn"
            android:layout_width="314dp"
            android:layout_height="65dp"
            android:lineHeight="36sp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal|bottom"

            android:backgroundTint="@color/on_primary"
            android:text="Hoàn thành"
            android:textColor="@color/primary"
            android:textSize="36sp"

            app:cornerRadius="10dp"
            app:rippleColor="@color/on_primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp" />
    </LinearLayout>


</FrameLayout>